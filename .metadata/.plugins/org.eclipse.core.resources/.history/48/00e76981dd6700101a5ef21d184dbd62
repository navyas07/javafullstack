package com.training.basics;

public class SwitchDemo {
	public static void main(String[] args) {

		String climate = "winter";

		switch (climate.toUpperCase()) {
		case "RAINY":
			System.out.println("Drink tea");
			System.out.println("Enjoy rain");
			break;

		case "WINTER":
			System.out.println("hot coffee");
			System.out.println("drink soup");
			break;

		case "SUMMER":
			System.out.println("Drink water");
			System.out.println("ICEEEE CREAMMMM");
			break;
		default:
			System.out.println("Incorrect choice");
		}

		
		
		// get 2 integer values, based on the choice
		// + - * /  String choice = "+";
		
		int a=2; int b=3;
		String option="+"; //+ - / *
		  switch(option) {
		   case "+":
		    System.out.println(a+b);
		    break;
		   case "-":
		    System.out.println(a-b);
		    break;
		   case "*":
		    System.out.println(a*b);
		    break;
		   case "/":
		    System.out.println(a/b);
		    break;
		   default:
		    System.out.println("please select correct choice");
		}
		  
		  
		  
		  int c=10; int d=5;
		  String operator="+";//- * /
		  switch(operator) {
		  case "+":
			  System.out.println(c+d);
			  break;
		  case "/":
			  System.out.println(c/d);
			  break;
		  case "*":
			  System.out.println(c*d);
			  break;
			  default:
				  System.out.println("incorrect operator");
		  }
		  
		  

	}

}
